<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/coffee_bg_2"
    tools:context=".ui.InfoActivity">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginVertical="24dp"
            android:orientation="vertical">

            <ImageView
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:layout_marginLeft="4dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_rosette_icon"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:fontFamily="@font/cofe_font"
                android:text="rozetler ne ise yarar?"
                android:textColor="@color/colorBrown"
                android:textSize="48sp"
                android:textStyle="normal" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/helvetica_neue"
                android:layout_marginHorizontal="24dp"
                android:text="*Rozet puanları ücretsiz içecek ve sürpriz hediyelere sahip olmak için biriktirilir.\n*Harcanılan tutar kadar Rozet kazanılır.(Örn. 50 ₺ = 50 Rozet)"
                android:textColor="@color/colorBrown"
                android:textSize="12sp"
                android:textStyle="normal" />

            <ImageView
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:layout_marginLeft="4dp"
                android:layout_marginTop="12dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_gift_box_red"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:fontFamily="@font/cofe_font"
                android:text="hediyelerr"
                android:textColor="@color/colorBrown"
                android:textSize="48sp"
                android:textStyle="normal" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/helvetica_neue"
                android:layout_marginHorizontal="24dp"
                android:text="*500 Rozet = iki içeçek.\n*2500 Rozet = Cafe tarafından belirlenecek sürpriz hediye\n*5000 Rozet = Cafe tarafından verilecek VIP Rozet Arması.(VIP Rozet Arması, haftada bir kez ücretsiz kahve almanızı sağlar)"
                android:textColor="@color/colorBrown"
                android:textSize="12sp"
                android:textStyle="normal" />

            <ImageView
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:layout_marginLeft="4dp"
                android:layout_marginTop="12dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_discount_tag"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:fontFamily="@font/cofe_font"
                android:text="indirimler"
                android:textColor="@color/colorBrown"
                android:textSize="48sp"
                android:textStyle="normal" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/helvetica_neue"
                android:layout_marginHorizontal="24dp"
                android:text="*Bu uygulamaya sahip kullanıcılar 50 ₺ ve üzeri siparişlerinde  %10 İNDİRİM'e sahiptirler.\n*Kullanıcılar her siparişlerinde 1.99 ₺ indirime sahiptirler."
                android:textColor="@color/colorBrown"
                android:layout_marginBottom="4dp"
                android:textSize="12sp"
                android:textStyle="normal" />

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>







</RelativeLayout>